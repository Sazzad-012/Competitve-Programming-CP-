#include <bits/stdc++.h>
using namespace std;

bool checkPerfectNumber(int num){
    vector<int> a;
    int n = 0;

    for (int i = 1; i < num; i++){
        if(num % i == 0){
            a.push_back(i);
        }
    }

    for(int i = 0; i < a.size(); i++){
        n += a[i];
    }

    return (n == num);
}

int main(){
    int num;
    cin >> num;

    if(checkPerfectNumber(num)){
        cout << "true" << endl;   
    } else {
        cout << "false" << endl;  
    }

    return 0;
}
