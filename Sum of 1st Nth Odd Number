//Using Recursion
#include <bits/stdc++.h>
using namespace std;


int sumOdd(int n) {
    if (n == 0)  
        return 0;
    return sumOdd(n - 1) + (2 * n - 1); 
}

int main() {
    int n;
    cin >> n;

    cout << sumOdd(n) << endl;

    return 0;
}


//Using Function
#include <bits/stdc++.h>
using namespace std;


int sumOdd(int n) {
    if (n == 0)   
        return 0;
    return sumOdd(n - 1) + (2 * n - 1); 
}

int main() {
    int n;
    cin >> n;

    int result = sumOdd(n); 
    cout << result << endl;

    return 0;
}

//Input: 5
//Output: 25

